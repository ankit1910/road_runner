<h1>Listing deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Package number</th>
      <th>Company</th>
      <th>City</th>
      <th>Status</th>
      <th>Date of delivery</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.package_number %></td>
        <td><%= delivery.company %></td>
        <td><%= delivery.city %></td>
        <td><%= delivery.status %></td>
        <td><%= delivery.date_of_delivery %></td>
        <td><%= delivery.address %></td>
        <td><%= link_to 'Show', delivery %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

